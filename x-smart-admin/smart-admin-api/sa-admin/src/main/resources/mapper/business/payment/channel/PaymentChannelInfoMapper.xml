<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.lab1024.sa.admin.module.business.payment.channel.dao.PaymentChannelInfoDao">

    <!-- 分页查询 -->
    <select id="queryOptions" resultType="net.lab1024.sa.admin.module.business.payment.channel.domain.vo.PaymentChannelInfoVO">
        SELECT
        id,department_id,mer_name,mer_code
        FROM t_payment_channel_info
        WHERE id > 0
        <if test="departmentIds != null and departmentIds.size > 0 and administratorFlag!=1">
            and department_id in
            <foreach collection="departmentIds" open="(" close=")" separator="," item="item" >
                #{item}
            </foreach>
        </if>
    </select>

    <select id="queryByDepartmentId" resultType="net.lab1024.sa.admin.module.business.payment.channel.domain.vo.PaymentChannelInfoVO">
        SELECT *
        FROM t_payment_channel_info
        WHERE department_id = #{departmentId}
          AND status = 1
    </select>
</mapper>