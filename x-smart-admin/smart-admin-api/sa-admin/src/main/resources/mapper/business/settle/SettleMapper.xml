<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.lab1024.sa.admin.module.business.settle.dao.PaymentSettleDao">

    <!-- 分页查询 -->
    <select id="queryPage" resultType="net.lab1024.sa.admin.module.business.settle.domain.vo.SettleVO">
        SELECT
        *
        FROM t_payment_settle
        WHERE 1=1
        <if test="queryForm.currency != null and queryForm.currency != ''">
            and currency = #{queryForm.currency}
        </if>
        <if test="queryForm.departmentIds != null and queryForm.departmentIds.size > 0 and queryForm.administratorFlag!=1">
            and department_id in
            <foreach collection="queryForm.departmentIds" open="(" close=")" separator="," item="item" >
                #{item}
            </foreach>
        </if>
        <if test="queryForm.settleStatus != null and queryForm.settleStatus != ''">
            and settle_status = #{queryForm.settleStatus}
        </if>
        <if test="queryForm.settleStartDate != null and queryForm.settleStartDate != ''
                    and queryForm.settleEndDate != null and queryForm.settleEndDate != ''">
            and trade_date >= #{queryForm.settleStartDate,jdbcType=VARCHAR}
            and trade_date &lt;= #{queryForm.settleEndDate,jdbcType=VARCHAR}
        </if>
    </select>


    <select id="getExcelExportData" resultType="net.lab1024.sa.admin.module.business.settle.domain.vo.SettleVO">
        SELECT
        *
        FROM t_payment_settle
        WHERE 1=1
        <if test="queryForm.currency != null and queryForm.currency != ''">
            and currency = #{queryForm.currency}
        </if>
        <if test="queryForm.departmentId != null">
            and department_id = #{queryForm.departmentId}
        </if>
        <if test="queryForm.settleStatus != null and queryForm.settleStatus != ''">
            and settle_status = #{queryForm.settleStatus}
        </if>
        <if test="queryForm.settleStartDate != null and queryForm.settleStartDate != ''
                    and queryForm.settleEndDate != null and queryForm.settleEndDate != ''">
            and trade_date >= #{queryForm.settleStartDate,jdbcType=VARCHAR}
            and trade_date &lt;= #{queryForm.settleEndDate,jdbcType=VARCHAR}
        </if>
    </select>


</mapper>